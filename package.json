{
  "name": "lean-tech-challenge",
  "version": "1.0.0",
  "description": "Coding challenge made in Nodejs",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc --sourceMap -p ./",
    "dev": "docker compose up -d && nodemon ./src/index.ts",
    "lint": "eslint \"**/*.{ts,tsx}\" --quiet --fix",
    "start": "ts-node ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "bluebird": "^3.7.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-joi-router": "^8.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-morgan": "^1.0.1",
    "koa-swagger-decorator": "^1.7.5",
    "mongoose": "^5.13.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-joi-router": "^8.0.1",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa__cors": "^3.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "tsc": "^2.0.3",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cargonzalv/lean-tech-challenge.git"
  },
  "keywords": [
    "nodejs",
    "node",
    "javascript",
    "typescript",
    "challenge"
  ],
